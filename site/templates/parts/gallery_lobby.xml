<document>
		<a
			href="URL::make(array(), 'pluse/'.$params['text_id'].'.xml'.'.xml')"
			cms:eval="href"
			>
			<img
				src="gallery::getThumbnailById($params['id'], null, 150, Thumbnail::CONSTRAIN_WIDTH)"
				alt="$params['title'][$language]"
				cms:eval="src,alt"
				/>
			<h4><cms:var param="title" multilanguage="yes"/></h4>
			<p><cms:var param="description" multilanguage="yes"/></p>
			<span><cms:text constant="press_here"/></span>
		</a>
</document>
