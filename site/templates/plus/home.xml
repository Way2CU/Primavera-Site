								<cms:text constant="play_video" />
								<cms:svg file="site-sprite.svg" symbol="play" />
							</a>
						<cms:mobile>
							<img
								src="_BASEURL.'/site/images/mobile_background.jpg'"
								alt="background_mobile"
								cms:eval="src"
								class="background"
							/>
						</cms:mobile>
							<div>
								<h2><cms:text constant="contact"/></h2>
								<cms:module
									name="contact_form"
									action="show"
									text_id="contact_form"
								/>
							</div>
					</section>

			<section id="product_gallery">
						<cms:module
							name="gallery"
							action="show_image_list"
							group="gallery_lobby"
							template="parts/gallery_lobby.xml"
						/>
			</section>
			<section id="about_plus">
			<cms:desktop>
				<cms:module
					name="articles"
					action="show"
					text_id="about_plus"
					template="stock/article_generic.xml"
					/>
			</cms:desktop>
			<cms:mobile>
				<cms:module
					name="articles"
					action="show"
					text_id="about_plus"
					template="stock/article_generic.xml"
					/>
				   	<img
						src="_BASEURL.'/site/images/about_plus.jpg'"
						alt="plus"
						cms:eval="src"
						class="about_us"
					/>
			</cms:mobile>
			</section>


			<section id="experts">
				<cms:module
					name="articles"
					action="show"
					text_id="services_lobby"
					template="stock/article_generic.xml"
				/>
			</section>

			<section id="services">
				<cms:module
					name="articles"
					action="show"
					text_id="experts_lobby"
					template="stock/article_generic.xml"
				/>
			</section>

			<section id="quality">
				<cms:module
					name="articles"
					action="show"
					text_id="quality"
					template="parts/article_quality.xml"
				/>

				<cms:template file="parts/section_quality_icons.xml"/>

				<a href="#top">
				<cms:svg file="site-sprite.svg" symbol="arrow" class="arrow" />
				</a>
			</section>

			<footer>
				<cms:desktop>
					<cms:template file="stock/copyright.xml">
						<param name="holder" value="copyright_holder"/>
						<param name="text" value="copyright_text"/>
						<param name="light" value=""/>
					</cms:template>
				</cms:desktop>
				<cms:mobile>
					<cms:template file="stock/copyright.xml">
						<param name="holder" value="copyright_holder"/>
						<param name="text" value="copyright_text"/>
						<param name="light" value=""/>
					</cms:template>
				</cms:mobile>
