					<cms:mobile>
						<a href="#experts">
							<cms:text constant="about_us_lobby"/>
						</a>
						<a href="#product_gallery">
							<cms:text constant="the_products"/>
						</a>
						<a href="#about">
							<cms:text constant="contact_us_lobby"/>
